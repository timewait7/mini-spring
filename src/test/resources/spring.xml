<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	         http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="person" class="com.tw.minispring.ioc.bean.Person">
        <property name="name" value="zhang3"/>
        <property name="age" value="19" />
        <property name="car" ref="car"/>
    </bean>

    <bean id="car" class="com.tw.minispring.ioc.bean.Car">
        <property name="brand" value="porsche"/>
    </bean>

    <bean class="com.tw.minispring.ioc.common.CustomBeanFactoryPostProcessor" />
    <bean class="com.tw.minispring.ioc.common.CustomBeanPostProcessor" />

    <bean id="helloService" class="com.tw.minispring.ioc.service.HelloService" />
</beans>